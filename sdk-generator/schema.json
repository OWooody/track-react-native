{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "clientName": {
      "type": "string",
      "description": "Name of the client/organization"
    },
    "packageName": {
      "type": "string",
      "description": "NPM package name for the generated SDK"
    },
    "version": {
      "type": "string",
      "description": "Version of the generated SDK"
    },
    "events": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Event name"
          },
          "category": {
            "type": "string",
            "enum": ["engagement", "conversion", "navigation", "error", "performance", "custom"],
            "description": "Event category"
          },
          "description": {
            "type": "string",
            "description": "Description of the event"
          },
          "requiredProperties": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Required properties for this event"
          },
          "optionalProperties": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Optional properties for this event"
          }
        },
        "required": ["name", "category"]
      }
    }
  },
  "required": ["clientName", "packageName", "version", "events"]
} 